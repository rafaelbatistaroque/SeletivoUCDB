<div class="container body-content jumbotron" ng-controller="tarefaCtrl">
    <ul class="body-content" style="display: flex; flex-direction: column;">
        <li ng-repeat="tarefa in Tarefas" style="display: flex;">
            <div style="display: flex; flex: 1; justify-content: space-between;">
                <span style="flex: 1;">{{tarefa.Descricao}} </span>
                <span style="flex: 1;">{{tarefa.DataHora}}</span>

                @* MENU DE STATUS DA TAREFA *@
                <div class="dropdown" style="flex: 1">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        {{tarefa.StatusTarefa}}
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <li ng-repeat="opcao in opcoesStatus">
                            <a href="" ng-click="atualizarStatusDeTarefa(opcao.status, tarefa.Id)">{{opcao.status}}</a>
                        </li>
                    </ul>
                </div>
            </div>
            <button class="btn btn-danger" ng-click="deletarTarefaDaLista(tarefa.Id)"><span class="glyphicon glyphicon-trash"></span></button>
        </li>
    </ul>
    <div style="display: flex; justify-content: space-around;">
        <input type="text" ng-model="inputTarefa" class="form-control" placeholder="Sua tarefa">
        <input type="datetime-local" ng-model="inputHoraData" class="form-control" min="2020-01-01T00:00" value="2020-01-01T12:00:00.000">
        <button ng-click="incluirNovaTarefaNaLista()" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span></button>
    </div>
</div>