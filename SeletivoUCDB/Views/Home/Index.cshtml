<h1 class="text-center">Lista de tarefas</h1>
<div class="container body-content jumbotron" ng-controller="tarefaCtrl">
    <ul class="body-content" id="lista-tarefa">
        <li ng-repeat="tarefa in Tarefas" ng-class="tarefa.Cor">
            <div class="container-tarefa">
                <span class="itens-lista" style="flex: 1;" ng-bind="tarefa.Descricao">Aguarde...</span>
                <span class="itens-lista" ng-bind="tarefa.DataHora" >Aguarde...</span>

                @* MENU DE STATUS DA TAREFA *@
                <div class="dropdown itens-lista">
                    <button class="btn btn-default dropdown-toggle"
                            type="button"
                            id="dropdownMenu1"
                            data-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="true"
                            ng-bind="tarefa.StatusTarefa">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <li ng-repeat="opcao in opcoesStatus">
                            <a href="" ng-click="atualizarStatusDeTarefa(opcao.status, tarefa.Id)" ng-bind="opcao.status">Aguarde...</a>
                        </li>
                    </ul>
                </div>
            </div>
            <button class="btn btn-danger" ng-click="deletarTarefaDaLista(tarefa.Id)"><span class="glyphicon glyphicon-trash"></span></button>
        </li>
    </ul>
    <div style="display: flex; justify-content: space-around;">
        <input type="text" ng-model="inputTarefa" ng-change="validarInputDescricaoTarefa()" class="form-control" placeholder="Sua tarefa">
        <input type="datetime-local" ng-model="inputHoraData" class="form-control" min="2020-01-01T00:00" value="2020-01-01T12:00:00.000">
        <button ng-click="incluirNovaTarefaNaLista()" class="btn btn-primary" ng-disabled="StatusButton"><span class="glyphicon glyphicon-plus"></span></button>
    </div>
</div>